<% title "Pokaż fortunkę" %>

<% if notice -%>
<div id="notice"><%= notice %></div>
<% end -%>

<article class="single">
  <div class="attribute">
    <span class="name"><b>Cytat</b></span>
    <span class="value"><%= @fortune.quotation %></span>
  </div>
  <div class="attribute">
    <span class="name"><b>Źródło</b></span>
    <span class="value"><%= @fortune.source %></span>
  </div>
  <div class="link">
    <%= link_to 'Edytuj', edit_fortune_path(@fortune), class: "btn primary" %>
    <%= link_to 'Powrót', fortunes_path, class: "btn primary" %>
  </div>
</article>
